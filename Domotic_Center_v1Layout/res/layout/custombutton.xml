	<solid 
	    
	     android:background="@android:color/transparent"
	    />
	<stroke android:width="3px" android:color="#5EC722" />
	<padding
	android:left="10dp"
	android:top="7dp"
	android:right="10dp"
	android:bottom="7dp"
	/>
